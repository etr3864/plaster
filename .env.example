# Server Configuration
PORT=3000
NODE_ENV=development

# WA Sender Configuration
WA_SENDER_BASE_URL=https://wasenderapi.com/api
WA_SENDER_API_KEY=your_session_api_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Conversation Settings
MAX_HISTORY_MESSAGES=40
BATCH_WINDOW_MS=8000

# Response Timing (human-like delay in milliseconds)
MIN_RESPONSE_DELAY_MS=1500
MAX_RESPONSE_DELAY_MS=3000
